<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- User profile shimmer -->
        <View
            android:id="@+id/userProfileImageShimmer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_shimmer_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Username shimmer -->
        <View
            android:id="@+id/userNameShimmer"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_shimmer_rounded"
            app:layout_constraintStart_toEndOf="@id/userProfileImageShimmer"
            app:layout_constraintTop_toTopOf="@id/userProfileImageShimmer" />

        <!-- Timestamp shimmer -->
        <View
            android:id="@+id/timestampShimmer"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_shimmer_rounded"
            app:layout_constraintStart_toStartOf="@id/userNameShimmer"
            app:layout_constraintTop_toBottomOf="@id/userNameShimmer" />

        <!-- Book card shimmer -->
        <View
            android:id="@+id/bookCardShimmer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_rounded"
            app:layout_constraintTop_toBottomOf="@id/userProfileImageShimmer" />

        <!-- Review title shimmer -->
        <View
            android:id="@+id/titleShimmer"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_rounded"
            app:layout_constraintTop_toBottomOf="@id/bookCardShimmer" />

        <!-- Review text shimmer -->
        <View
            android:id="@+id/reviewTextShimmer1"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_shimmer_rounded"
            app:layout_constraintTop_toBottomOf="@id/titleShimmer" />

        <View
            android:id="@+id/reviewTextShimmer2"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_shimmer_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintTop_toBottomOf="@id/reviewTextShimmer1" />

        <!-- Button shimmer -->
        <View
            android:id="@+id/buttonShimmer"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reviewTextShimmer2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
