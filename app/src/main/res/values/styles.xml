<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <!-- ...existing styles... -->

    <style name="circleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Style for section titles -->
    <style name="SectionTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1E3A8A</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- Style for book cards -->
    <style name="BookCardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="rippleColor">#33000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E0E0E0</item>
    </style>
    
    <!-- Style for the selected book card -->
    <style name="SelectedBookCardStyle" parent="BookCardStyle">
        <item name="strokeColor">#2563EB</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>
